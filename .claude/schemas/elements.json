{
  "$schema": "./elements.schema.json",
  "form-field": {
    "flow": true,
    "permittedContent": [
      "label",
      "input",
      "textarea",
      "select",
      "output",
      "@phrasing"
    ],
    "attributes": {
      "data-required": {
        "required": false,
        "boolean": true
      },
      "data-valid": {
        "required": false,
        "boolean": true
      },
      "data-invalid": {
        "required": false,
        "boolean": true
      }
    }
  },
  "table-wrapper": {
    "flow": true,
    "permittedContent": [
      "table",
      "caption"
    ]
  },
  "theme-selector": {
    "flow": true,
    "permittedContent": [
      "fieldset",
      "div",
      "@flow"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": [
          "default",
          "compact",
          "icons"
        ]
      }
    }
  },
  "x-icon": {
    "flow": true,
    "phrasing": true,
    "void": true,
    "attributes": {
      "name": {
        "required": true
      },
      "set": {
        "required": false
      },
      "size": {
        "required": false,
        "enum": [
          "xs",
          "sm",
          "md",
          "lg",
          "xl",
          "2xl"
        ]
      },
      "label": {
        "required": false
      },
      "base-path": {
        "required": false
      }
    }
  },
  "status-badge": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "@phrasing"
    ],
    "attributes": {
      "type": {
        "required": false,
        "enum": [
          "success",
          "warning",
          "error",
          "info"
        ]
      }
    }
  },
  "data-table": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "source": {
        "required": false
      },
      "sortable": {
        "required": false,
        "boolean": true
      }
    }
  },
  "nav-menu": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "orientation": {
        "required": false,
        "enum": [
          "horizontal",
          "vertical"
        ]
      }
    }
  },
  "faq-list": {
    "flow": true,
    "permittedContent": [
      "faq-question",
      "faq-answer"
    ],
    "attributes": {
      "category": {
        "required": false
      }
    }
  },
  "faq-question": {
    "flow": true,
    "permittedContent": [
      "@phrasing"
    ],
    "attributes": {
      "id": {
        "required": false
      }
    }
  },
  "faq-answer": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {}
  },
  "product-card": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-featured": {
        "required": false,
        "boolean": true
      }
    }
  },
  "feature-card": {
    "flow": true,
    "permittedContent": [
      "h3",
      "p",
      "@phrasing"
    ],
    "attributes": {
      "data-highlight": {
        "required": false,
        "boolean": true
      }
    }
  },
  "site-header": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-sticky": {
        "required": false,
        "boolean": true
      }
    }
  },
  "site-footer": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {}
  },
  "hero-section": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      },
      "data-align": {
        "required": false,
        "enum": [
          "left",
          "center",
          "right"
        ]
      }
    }
  },
  "card-grid": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-columns": {
        "required": false,
        "enum": [
          "2",
          "3",
          "4",
          "auto"
        ]
      }
    }
  },
  "user-avatar": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "img",
      "@phrasing"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "xs",
          "small",
          "medium",
          "large",
          "xl"
        ]
      },
      "data-status": {
        "required": false,
        "enum": [
          "online",
          "offline",
          "busy",
          "away"
        ]
      },
      "data-shape": {
        "required": false,
        "enum": [
          "circle",
          "square"
        ]
      }
    }
  },
  "tag-item": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "span",
      "button",
      "@phrasing"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "default",
          "large"
        ]
      },
      "data-removable": {
        "required": false,
        "boolean": true
      }
    }
  },
  "loading-spinner": {
    "flow": true,
    "phrasing": true,
    "void": true,
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      }
    }
  },
  "progress-bar": {
    "flow": true,
    "permittedContent": [
      "label",
      "progress",
      "span",
      "@phrasing"
    ],
    "attributes": {
      "data-color": {
        "required": false,
        "enum": [
          "default",
          "success",
          "warning",
          "error"
        ]
      },
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      }
    }
  },
  "tab-group": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": [
          "underline",
          "pills"
        ]
      },
      "data-orientation": {
        "required": false,
        "enum": [
          "horizontal",
          "vertical"
        ]
      }
    }
  },
  "nav-pagination": {
    "flow": true,
    "permittedContent": [
      "nav",
      "a",
      "button",
      "@phrasing"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": [
          "default",
          "simple",
          "dots"
        ]
      }
    }
  },
  "meter-display": {
    "flow": true,
    "permittedContent": [
      "label",
      "meter",
      "span",
      "@phrasing"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      }
    }
  },
  "tooltip-wrapper": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "button",
      "a",
      "div",
      "@phrasing"
    ],
    "attributes": {}
  }
}
