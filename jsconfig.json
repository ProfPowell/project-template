{
  "$schema": "https://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"]
  },
  "include": [".claude/scripts/**/*.js"],
  "exclude": ["node_modules", ".claude/starters"]
}
