{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Web project template with validation, skills, and automation for Claude Code",
  "private": true,
  "type": "module",
  "scripts": {
    "validate": "html-validate",
    "hint": "htmlhint",
    "a11y": "pa11y",
    "validate:all": "html-validate '**/*.html' && htmlhint '**/*.html'",
    "a11y:all": "for f in src/**/*.html; do npx pa11y \"$f\"; done",
    "lint": "npm run validate:all",
    "lint:css": "stylelint '**/*.css' --ignore-path .gitignore --ignore-pattern 'test/fixtures/invalid/**'",
    "lint:css:fix": "stylelint '**/*.css' --fix --ignore-path .gitignore --ignore-pattern 'test/fixtures/invalid/**'",
    "lint:images": "node scripts/image-check.js",
    "lint:images:html": "node scripts/image-html-check.js",
    "lint:links": "link-checker src",
    "lint:links:remote": "linkinator src --skip '^(?!https?:)' --timeout 30000",
    "lint:spelling": "cspell \"**/*.{html,md}\" --config .cspell.json",
    "lint:grammar": "textlint \"**/*.{html,md}\"",
    "lint:readability": "node scripts/readability-check.js",
    "lint:meta": "node scripts/metadata-check.js",
    "lint:jsonld": "node scripts/jsonld-check.js",
    "lint:seo": "node scripts/seo-content.js",
    "lint:budget": "node scripts/resource-budget.js",
    "lint:vitals": "node scripts/web-vitals-check.js",
    "lint:site": "node scripts/site-check.js",
    "lint:manifest": "node scripts/manifest-check.js",
    "lint:darkmode": "node scripts/dark-mode-check.js",
    "lint:fonts": "node scripts/font-check.js",
    "lint:markdown": "markdownlint '**/*.md' --ignore node_modules --ignore .worklog",
    "lint:markdown:fix": "markdownlint '**/*.md' --ignore node_modules --ignore .worklog --ignore 'test/fixtures/invalid/**' --fix",
    "lint:content": "npm run lint:spelling && npm run lint:grammar && npm run lint:readability",
    "lint:js": "eslint '**/*.js' --ignore-pattern 'node_modules' --ignore-pattern 'test/fixtures/invalid/**'",
    "lint:js:fix": "eslint '**/*.js' --fix --ignore-pattern 'node_modules' --ignore-pattern 'test/fixtures/invalid/**'",
    "lint:complexity": "node scripts/complexity-check.js",
    "lint:all": "npm run lint && npm run lint:css && npm run lint:js && npm run lint:markdown && npm run lint:complexity && npm run lint:images && npm run lint:content && npm run lint:meta",
    "lint:changed": "node scripts/incremental-validate.js",
    "lint:staged": "node scripts/incremental-validate.js --staged",
    "optimize:images": "node scripts/optimize-images.js",
    "test": "node scripts/test-runner.js",
    "test:all": "node --test 'test/**/*.test.js'",
    "test:watch": "node --test --watch 'test/**/*.test.js'",
    "test:coverage": "node scripts/test-coverage-check.js",
    "health": "node scripts/health-check.js",
    "lighthouse": "lhci autorun",
    "generate:patterns": "node scripts/generate-patterns.js",
    "generate:tokens": "node scripts/document-tokens.js",
    "generate:a11y": "node scripts/generate-a11y-statement.js",
    "icons:sync": "node scripts/sync-icons.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.1.0",
    "@lhci/cli": "^0.15.1",
    "cspell": "^8.0.0",
    "eslint": "^9.39.2",
    "html-validate": "^8.24.0",
    "htmlhint": "^1.1.4",
    "link-checker": "^1.4.2",
    "linkinator": "^6.0.0",
    "lucide-static": "^0.562.0",
    "markdownlint-cli": "^0.47.0",
    "pa11y": "^8.0.0",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "text-readability": "^1.1.1",
    "textlint": "^14.0.0",
    "textlint-plugin-html": "^1.0.0",
    "textlint-rule-write-good": "^2.0.0"
  }
}
