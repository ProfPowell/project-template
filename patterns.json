      "related": ["hero", "stats", "card"],
      "examples": [
        { "name": "Three-Column Cards", "html": "<feature-grid data-columns=\"3\" data-style=\"cards\">\n  <div data-grid>\n    <article>\n      <x-icon name=\"zap\"></x-icon>\n      <h3>Fast</h3>\n      <p>Lightning performance.</p>\n    </article>\n  </div>\n</feature-grid>" }
      ]
    },
