---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article class="card">
  <h3>{title}</h3>
  <slot />
</article>

<style>
  .card {
    padding: var(--spacing-xl);
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
  }

  h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-sm);
  }

  .card :global(p) {
    color: var(--text-muted);
  }
</style>
