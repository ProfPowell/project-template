---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const recentPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);
---

<BaseLayout title="Home">
  <section class="hero">
    <h1>Welcome to {{SITE_NAME}}</h1>
    <p class="hero-description">{{DESCRIPTION}}</p>
    <div class="hero-actions">
      <a href="/about" class="button-primary">Learn More</a>
      <a href="/blog" class="button-secondary">Read Blog</a>
    </div>
  </section>

  <section class="features">
    <h2>Features</h2>
    <div class="features-grid">
      <Card title="Content Collections">
        <p>Organize your content with type-safe collections.</p>
      </Card>
      <Card title="Component Islands">
        <p>Add interactivity only where you need it.</p>
      </Card>
      <Card title="Zero JavaScript">
        <p>Ship zero JavaScript by default for maximum speed.</p>
      </Card>
    </div>
  </section>

  {recentPosts.length > 0 && (
    <section class="recent-posts">
      <h2>Recent Posts</h2>
      <ul class="posts-list">
        {recentPosts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}`}>
              <h3>{post.data.title}</h3>
              <p>{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
      <a href="/blog" class="view-all">View all posts â†’</a>
    </section>
  )}
</BaseLayout>

<style>
  .hero {
    padding: var(--spacing-3xl) var(--spacing-lg);
    text-align: center;
    background: var(--surface-alt);
  }

  .hero h1 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-md);
  }

  .hero-description {
    font-size: var(--font-size-lg);
    color: var(--text-muted);
    margin-bottom: var(--spacing-xl);
  }

  .hero-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  .features {
    padding: var(--spacing-3xl) var(--spacing-lg);
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .features h2 {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
  }

  .recent-posts {
    padding: var(--spacing-3xl) var(--spacing-lg);
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .recent-posts h2 {
    margin-bottom: var(--spacing-xl);
  }

  .posts-list {
    list-style: none;
    display: grid;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .posts-list a {
    display: block;
    padding: var(--spacing-lg);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    text-decoration: none;
  }

  .posts-list a:hover {
    border-color: var(--primary);
    background: var(--surface-alt);
  }

  .posts-list h3 {
    color: var(--text);
    margin-bottom: var(--spacing-xs);
  }

  .posts-list p {
    color: var(--text-muted);
  }

  .view-all {
    display: inline-block;
    color: var(--primary);
  }
</style>
